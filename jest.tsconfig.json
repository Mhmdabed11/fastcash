{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "src",
    "paths": {
      "test-utils": ["../utils/test-utils"]
    }
  },
  "exclude": ["node_modules", "out", ".next"]
}
